@model IEnumerable<PermissionSystemMVC.Models.Department>

@{
    ViewData["Title"] = "Department";
}

<h1>managment Department</h1>
<p>
    <a asp-action="CreateDepartment">Create New User</a>
</p>
<form asp-action="CreateDepartment">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label for="Name">Department name</label>
        <input value="" class="form-control" type="text" id="Name" name="Name">
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
@if (Model == null)
{
    <span>no data !</span>
}
else
{

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <a class="btn btn-success" asp-action="EditDepartment" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-danger" asp-action="DeleteDepartment" asp-route-id="@item.Id">Delete</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
}