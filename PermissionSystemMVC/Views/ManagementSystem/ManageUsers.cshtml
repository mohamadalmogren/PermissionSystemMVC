@model IEnumerable<PermissionSystemMVC.Models.ViewModels.UserListViewModel>

@{
    ViewData["Title"] = "Users";
}
<div class="row">
    <div class="col-10">
        <h2>Manage Users</h2>
    </div>
    <div class="col-2">
        <a class="btn btn-primary" asp-action="CreateUsers">Create New User</a>
    </div>
</div>

<br />

<div class="row">

    @if (Model == null)
    {

        <div class="alert alert-primary" role="alert">
            <span> No Users Added ! </span>
        </div>
    }
    else
    {
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Username)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Departmentname)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Role)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Username)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Departmentname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Role)

                        </td>
                        <td>
                            <a class="btn btn-primary" asp-action="EditUser" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-danger" asp-action="DeleteUser" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    }

</div>
