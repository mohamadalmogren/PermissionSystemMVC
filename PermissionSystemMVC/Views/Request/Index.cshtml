                    { "data": "datePrmission" },
                    { "data": "fromTime" },
                    { "data": "toTime" },
                    { "data": "createDate" },
                    { "data": "status" },
                    {
                        "data": "id",
                        "render": function (data, type) {
                            return '<button class="btn btn-danger" onclick="Cancel(' + data + ')">Cancel</button>'
                        }

                    }
                ]
            });
            
        });

        function Cancel(id) {
            bootbox.confirm({
                size: "small",
                message: "Are you sure?",
                callback: function (result) {
                    if (result) {
                        $.ajax({
                            type: "POST",
                            url: "Request/CancelRequest",
                            data: { Id: id },
                            dataType: "json",
                            success: function (data) {

                                if (data.resulte) {
                                    toastr.success(data.msg, 'Done');
                                    $('#data-table').DataTable().ajax.reload();
                                }
                                else {
                                    toastr.error(data.msg, 'Error');
                                }
                            },
                            error: function (req, status, error) {
                                alert(error);
                            }
                        });
                    }
                }
            });
        }
        
    </script>

