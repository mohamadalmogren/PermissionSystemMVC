@model IEnumerable<PermissionSystemMVC.Models.Request>

@{
    ViewData["Title"] = "Index";
}
<h1>Request Page</h1>
<p>
    <a asp-action="Create">Create New</a>
</p>

@if (Model == null)
{
    <span> NO Data !</span>
}
else
{

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PrmisssionType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DatePrmission)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FromTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ToTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PrmisssionType)

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DatePrmission)

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FromTime)

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ToTime)

                    </td>
                    <td>
                        @if (User.IsInRole(RolesName.Manager) && string.Equals(item.Status, "New"))
                        {
                            <a class="btn btn-success" asp-action="Approve" asp-route-id="@item.Id">Approve</a>
                            <a class="btn btn-danger" asp-action="Reject" asp-route-id="@item.Id">Reject</a>
                        }
                        else
                        {

                            @Html.DisplayFor(modelItem => item.Status)
                        }
                    </td>
                </tr>
            }

        </tbody>
    </table>
}