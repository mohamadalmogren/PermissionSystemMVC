@model IEnumerable<PermissionSystemMVC.Models.Request>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-10">
        <h2>Requests</h2>
    </div>
    <div class="col-2">
        <a class="btn btn-primary" asp-action="Create">Create New</a>
    </div>
</div>
<br />

@if (Model == null)
{
    <span> NO Data !</span>
}
else
{
    <table class="table">
        <thead>
            <tr>
                @if (User.IsInRole(RolesName.Manager))
                {
                    <th>
                        @Html.DisplayNameFor(model => model.CreatedById)
                    </th>
                }
            <th>
                @Html.DisplayNameFor(model => model.PrmisssionType)
            </th>
                <th>
                    @Html.DisplayNameFor(model => model.DatePrmission)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FromTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ToTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreateDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    @if (User.IsInRole(RolesName.Manager))
                    {
                        <td>
                            @item.CreatedBy.Name
                        </td>
                    }
                    <td>
                        @item.PrmisssionType
                    </td>
                    <td>
                        @item.DatePrmission
                    </td>
                    <td>
                        @*@Html.DisplayFor(modelItem => item.FromTime.ToString("HH:mm"))*@
                        @item.FromTime.ToString("HH:mm")
                    </td>
                    <td>
                        @*@Html.DisplayFor(modelItem => item.ToTime)*@
                        @item.ToTime.ToString("HH:mm")
                    </td>
                    <td>
                        @item.CreateDate.ToString("dd/MM/yyyy")
                    </td>
                    <td>
                        @if (User.IsInRole(RolesName.Manager) && string.Equals(item.Status, Request.PrmisssionStatusEnum.New))
                        {
                            <a class="btn btn-success" asp-action="Approve" asp-route-id="@item.Id">Approve</a>
                            <a class="btn btn-danger" asp-action="Reject" asp-route-id="@item.Id">Reject</a>
                        }
                        else
                        {
                            @item.Status
                        }
                    </td>
                        @if (User.IsInRole(RolesName.Employee) && string.Equals(item.Status, Request.PrmisssionStatusEnum.New))
                         {
                            <td>
                                <a class="btn btn-danger" asp-action="Cancel" asp-route-id="@item.Id">Cancel</a>

                            </td>
                         }
                </tr>
            }

        </tbody>
    </table>
}

@section Scripts {

    <script>

    </script>>

}