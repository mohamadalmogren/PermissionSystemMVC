@section Scripts {

    <script>
        $(document).ready(function () {

            var myTable = $("#data-table").DataTable({
                "ajax": {
                    "url": 'Request/GetAllRequests',
                    "type": 'get',
                    "datatype": 'json'
                },
                "columns": [
                    { "data": "createdBy" },
