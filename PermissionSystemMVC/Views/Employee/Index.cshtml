@model IEnumerable<PermissionSystemMVC.Models.Request>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-10">
        <h2>Requests</h2>
    </div>
    <div class="col-2">
        <a class="btn btn-primary" asp-action="Create">Create New</a>
    </div>
</div>

<br />

@if (Model == null)
{
    <span> NO Data !</span>
}
else
{
    <table id="data-table" class="class=" display nowrap" width="100%">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PrmisssionType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DatePrmission)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FromTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ToTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreateDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th>Cancel</th>
            </tr>
        </thead>

    </table>
}
@section Scripts {

    <script>
        $(document).ready(function () {

            var myTable = $("#data-table").DataTable({
                "ajax": {
                    "url": 'Employee/GetAllRequests',
                    "type": 'get',
                    "datatype": 'json'
                },
                "columns": [
                    { "data": "prmisssionType" },
                    { "data": "datePrmission" },
                    { "data": "fromTime" },
                    { "data": "toTime" },
                    { "data": "createDate" },
                    { "data": "status" },
                    {
                        "data": "id",
                        "render": function (data, type) {
                            return '<button class="btn btn-danger" onclick="Cancel(' + data + ')">Cancel</button>'
                        }

                    }
                ]
            });

        });

        function Cancel(id) {
            bootbox.confirm({
                size: "small",
                message: "Are you sure?",
                callback: function (result) {
                    if (result) {
                        $.ajax({
                            type: "POST",
                            url: "Employee/CancelRequest",
                            data: { Id: id },
                            dataType: "json",
                            success: function (data) {

                                if (data.resulte) {
                                    toastr.success(data.msg, 'Done');
                                    $('#data-table').DataTable().ajax.reload();
                                }
                                else {
                                    toastr.error(data.msg, 'Error');
                                }
                            },
                            error: function (req, status, error) {
                                alert(error);
                            }
                        });
                    }
                }
            });
        }
    </script>

}
